<div class="row">
  <div class="col-sm-12">
    <form class="server-form" method="post">
      <div class="form-group">
        <label for="inputText">Textarea</label>
        <input type="text" class="form-control" id="inputText" name="inputText" placeholder="textarea" value="{{inputText}}">
      </div>
      <div class="form-group">
        <label for="insertString">InsertString</label>
        <input type="text" class="form-control" id="insertString" name="insertString" placeholder="insertString" value="{{insertString}}">
      </div>
      <div class="form-group">
        <label for="times">How many times?</label>
        <input type="number" id="times" name="times" placeholder="times" value="{{times}}">
      </div>
      <div class="form-group">
        <label for="spacing">Spacing</label>
        <input type="number" id="spacing" name="spacing" placeholder="spacing" value="{{spacing}}">
      </div>
      {{#if error }}
      <div class="form-group">
        <div class="alert alert-danger">
          {{ error }}
        </div>
      </div>
      {{/if}}
      <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
      {{#if result }}
      <div class="form-group">
        <h2> The result is: </h2>
        <div class="alert alert-success">
          {{ result }}
        </div>
      </div>
      {{/if}}
    </form>
  </div>
</div>